<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ufam.hospitalapp.FormUserActivity"
    tools:showIn="@layout/activity_form_user">

    <ImageView
        android:layout_marginTop="0dp"
        android:id="@+id/logo_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_perm_identity_black_24dp"
        />

    <EditText
        android:layout_below="@id/logo_nome"
        android:id="@+id/edt_user_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="DIGITE SEU NOME"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/colorPrimaryText"/>

    <ImageView
        android:layout_below="@id/edt_user_name"
        android:id="@+id/logo_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_email_black_24dp"
        />

    <EditText
        android:layout_below="@id/logo_email"
        android:id="@+id/edt_login_user"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="DIGITE SEU EMAIL"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/colorPrimaryText"
        android:inputType="textEmailAddress"
        />

    <ImageView
        android:layout_below="@id/edt_login_user"
        android:id="@+id/logo_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_vpn_key_black_24dp"/>

    <EditText
        android:layout_below="@id/logo_senha"
        android:id="@+id/edt_login_passwd"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="DIGITE SUA SENHA"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:password="true"
        android:textColor="@color/colorPrimaryText"
        />

    <ImageView
        android:layout_below="@id/edt_login_passwd"
        android:id="@+id/logo_senha2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_vpn_key_black_24dp"/>

    <EditText
        android:layout_below="@id/logo_senha2"
        android:id="@+id/edt_login_passwd_2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="REPITA SUA SENHA"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:password="true"
        android:textColor="@color/colorPrimaryText"
        />

    <Button
        android:layout_below="@id/edt_login_passwd_2"
        android:id="@+id/btn_save"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />

</RelativeLayout>
