<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ufam.hospitalapp.fragments.CommentaryListFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list_commentary"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/edt_send_commentary"/>

    <EditText
        android:padding="10dp"
        android:textSize="16sp"
        android:minHeight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_send_commentary"
        android:textColor="@color/colorPrimaryText"
        android:textColorHint="@color/colorSecond"
        android:hint="Deixe aqui seu comentÃ¡rio."
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/bt_send_commentary"
        android:layout_toStartOf="@+id/bt_send_commentary"
        android:background="@color/white" />

    <ImageButton
        android:background="@color/white"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:src="@drawable/ic_send"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/bt_send_commentary" />

</RelativeLayout>
